
 <div class="card-body ">
<form> 
<%= simple_form_for @dog do |f| %>
 <div class="form-group">
  <%= f.input :name ,class:"form-control"%>
 </div>
 <div class="form-group">
  <%= f.input :description, as: :text, class:"form-control" %>
 </div>
 <div class="form-group">
  <%= f.input :image, as: :file %>
</div>

  <%= f.number_field :user_id, id: :dog_user_id, value:current_user.id, type: :hidden %>

  <% if @dog.images.any? %>
    <%= image_tag @dog.images.first %>
  <% end %>

  <%= f.button :submit %>
<% end %>
</form>
</div>

